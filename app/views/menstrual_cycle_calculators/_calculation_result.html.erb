<div class="mt-4 p-4 bg-white rounded-lg shadow-md border-l-4 border-pink-500">

  <div class="flex items-center justify-between">
    <div>
      <p class="text-sm text-gray-500">Cálculo realizado em <%= calculator.created_at.strftime("%d/%m/%Y") %></p>
      <h3 class="text-lg font-semibold text-gray-800">Próximo Ciclo: <%= calculator.next_period_date.strftime("%d/%m/%Y") %></h3>
      <p class="text-sm text-pink-600">
        <span class="font-medium">Janela Fértil: <%= calculator.fertility_window_start.strftime("%d/%m/%Y") %> a <%= calculator.fertility_window_end.strftime("%d/%m/%Y") %></span>
      </p>
    </div>
  </div>

  <div class="mt-4 space-y-2">
    <p class="text-sm text-gray-700"><strong>Último Ciclo:</strong> <%= calculator.last_period_date.strftime("%d/%m/%Y") %></p>
    <p class="text-sm text-gray-700"><strong>Ovulação:</strong> <%= calculator.ovulation_date.strftime("%d/%m/%Y") %></p>
  </div>

  <div class="flex items-center space-x-2 mt-2">
    <%= link_to "Editar", edit_menstrual_cycle_calculator_path(calculator), class: "text-blue-600 hover:text-blue-800" %>
    <%= button_to "Excluir", menstrual_cycle_calculator_path(calculator), method: :delete, class: "text-red-600 hover:text-red-800", data: { confirm: "Tem certeza que deseja excluir este cálculo?" } %>
  </div>
</div> 