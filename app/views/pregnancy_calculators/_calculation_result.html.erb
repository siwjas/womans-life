<%= turbo_frame_tag dom_id(calculator) do %>
  <div class="mt-4 p-4 bg-white rounded-lg shadow-md border-l-4 border-blue-500">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Cálculo realizado em <%= calculator.created_at.strftime("%d/%m/%Y") %></p>
        <h3 class="text-lg font-semibold text-gray-800">Idade Gestacional: <%= calculator.weeks %> semanas e <%= calculator.days %> dias</h3>
        <p class="text-sm text-blue-600">
          <span class="font-medium">Trimestre: <%= calculator.current_trimester %>º</span>
        </p>
      </div>
    </div>
    <div class="mt-4 space-y-2">
      <p class="text-sm text-gray-700"><strong>Última Menstruação:</strong> <%= calculator.last_menstrual_period_date.strftime("%d/%m/%Y") %></p>
      <p class="text-sm text-gray-700"><strong>Data Prevista do Parto:</strong> <%= calculator.due_date.strftime("%d/%m/%Y") %></p>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to "Editar", edit_pregnancy_calculator_path(calculator), class: "text-blue-600 hover:text-blue-800", data: { turbo_frame: dom_id(calculator) } %>
      <%= button_to "Excluir", pregnancy_calculator_path(calculator), method: :delete, class: "text-red-600 hover:text-red-800", data: { confirm: "Tem certeza que deseja excluir este cálculo?" } %>
    </div>
  </div>
<% end %> 